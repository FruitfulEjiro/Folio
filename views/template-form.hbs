            <input type="text" name="slug" placeholder="Unique Username" required>

            <!-- Skills Section -->
            <div class="skill-section p-3">
                <div id="skillsContainer" class="skills-container">
                    <!-- Initial Project Entry -->
                    <div class="skill-entry d-flex flex-column py-2">
                        <h4>Skill</h4><i class="fa-solid fa-xmark"></i>
                        <label for="skill">Skill:</label>
                        <input type="text" name="skill[]" required>

                        <label for="skillPercentage">Percentage:</label>
                        <input type="text" name="skillPercentage[]" required>
                    </div>
                </div>
                <button type="button" class=" skill-btn btn btn-primary" id="addSkillButton">Add Another Skill</button>
            </div>

            <!-- Socials Section -->
            <div id="socials-container">
                <div>
                    <input type="checkbox" id="github" name="socials" value="github">
                    <label for="github">Github</label>
                </div>
                <div>
                    <input type="checkbox" id="linkedin" name="socials" value="linkedin">
                    <label for="linkedin">LinkedIn</label>
                </div>
                <div>
                    <input type="checkbox" id="twitter" name="socials" value="twitter">
                    <label for="twitter">Twitter</label>
                </div>
                <div>
                    <input type="checkbox" id="behance" name="socials" value="square-behance">
                    <label for="behance">Behance</label>
                </div>
                <div>
                    <input type="checkbox" id="instagram" name="socials" value="instagram">
                    <label for="instagram">Instagram</label>
                </div>
                <div>
                    <input type="checkbox" id="youtube" name="socials" value="youtube">
                    <label for="youtube">Youtube</label>
                </div>
                <div>
                    <input type="checkbox" id="facebook" name="socials" value="facebook">
                    <label for="facebook">Facebook</label>
                </div>
                <div>
                    <input type="checkbox" id="whatsapp" name="socials" value="whatsapp">
                    <label for="whatsapp">Whatsapp</label>
                </div>
                <div>
                    <input type="checkbox" id="snapchat" name="socials" value="square-snapchat">
                    <label for="snapchat">Snapchat</label>
                </div>
                <div>
                    <input type="checkbox" id="dribbble" name="socials" value="square-dribbble">
                    <label for="dribbble">Dribbble</label>
                </div>
                <div>
                    <input type="checkbox" id="pinterest" name="socials" value="pinterest">
                    <label for="pinterest">Pinterest</label>
                </div>
                <div>
                    <input type="checkbox" id="mail" name="socials" value="mail">
                    <label for="mail">Mailbox</label>
                </div>
            </div>

            <!-- Projects Section -->
            <div id="projectsContainer" class="p-3">
                <div id="projectContainer" class="project-container">
                <!-- Initial Project Entry -->
                    <div class="project-entry d-flex flex-column py-2">
                        <h3>Project</h3>
                        <label for="projectTitle">Project Title:</label>
                        <input type="text" name="projectTitle[]" required>

                        <label for="projectSummary">Project Summary:</label>
                        <textarea name="projectSummary[]" required></textarea>

                        <label for="projectUrl">Project Link:</label>
                        <input type="url" name="projectUrl[]" required>

                        <input type="file" class="mt-3 p-3 border-0" id="projectImage" name="projectImage"  accept="image/*" required>
                    </div>
                </div>
            <button type="button" class="btn btn-primary mt-4" id="addProjectButton">Add Another Project</button>
            </div>

            <!-- Resume and Avatar -->
            <div class="resume-container">
                <p class="resume-label mb-1">Add resume</p>
                <input type="file" name="resume" class="resume border-0" accept=".pdf">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </main>

    {{!-- Footer --}}
    {{>footer}}
    <script type="module" src="./js/script.js"></script>
